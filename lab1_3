import java.util.Scanner;

public class lab1_3 {
    public static void main(String[] args){
        Scanner in = new Scanner(System.in);
        System.out.print("Введите число ");
        int a = in.nextInt();
        if (a>0) {
            a = a + 1;
        }
        System.out.println("Полученное число: "+ a);
    }
}
